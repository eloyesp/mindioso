<div class="page-header">
  <h1><%= @vendor.name %>
      <%= link_to image_tag('icon_back.png', :border => 0), vendors_path %>
      <%= link_to image_tag('icon_edit.png', :border => 0), edit_vendor_path(@vendor) %>
      <%= link_to image_tag('icon_delete.png', :border => 0),
          vendor_path(@vendor), :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))%>
    </h1>
</div>

<div class="row">
  <div class="span3">
    <p><%= image_tag('tmp_whatsfun_screenshot.jpg', :border => 0) %></p>
  </div>

  <div class="span5">
    <p><strong>Description</strong></p>
    <p><%= @vendor.vendordescription %></p>
    <hr>
    <p><strong><%= image_tag('icon_phone_16.png', :border => 0) %> <%= @vendor.phone %></strong>
      <% unless @vendor.url.blank?
           link_to image_tag('icon_web_16.png', :border => 0), @vendor.url, html_options = { :target => 'blank' }
         end %>

      <% unless @vendor.vfacebook.blank?
           link_to image_tag('facebook_16.png', :border => 0), @vendor.vfacebook, html_options = { :target => 'blank' }
         end %>

      <% unless @vendor.vtwitter.blank?
           link_to image_tag('twitter_16.png', :border => 0), @vendor.vtwitter, html_options = { :target => 'blank' }
         end %>

      <% unless @vendor.vlinkedin.blank?
           link_to image_tag('linkedin_16.png', :border => 0), @vendor.vlinkedin, html_options = { :target => 'blank' }
         end %>
    </p>
    <hr>
  </div>
</div>

<div class="row">
  <div class="span3">
    <div class="well">
        <p><strong>Main Address</strong></p>
        <p><% unless @vendor.address1.blank? %>
             <%= @vendor.address1 %><br>
           <% end %>
           <% unless @vendor.address2.blank? %>
             <%= @vendor.address2 %><br>
           <% end %>
           <% unless @vendor.city.blank? %>
             <%= @vendor.city %>, <%= @vendor.state %> <%= @vendor.zip %>
           <% else %>
             <%= @vendor.state %> <%= @vendor.zip %>
           <% end %>
          <% unless @vendor.country.blank? %>
             <%= @vendor.country %><br>
          <% end %>
        </p>
        <p><strong>Billing Address</strong></p>
        <p><% unless @vendor.pmtaddress.blank? %>
             <%= @vendor.pmtaddress %><br>
           <% end %>
           <% unless @vendor.pmtaddress1.blank? %>
             <%= @vendor.pmtaddress1 %><br>
           <% end %>
           <% unless @vendor.city.blank? %>
             <%= @vendor.pmtcity %>, <%= @vendor.pmtstate %> <%= @vendor.pmtzip %>
           <% else %>
             <%= @vendor.pmtstate %> <%= @vendor.pmtzip %>
           <% end %>
          <% unless @vendor.pmtcountry.blank? %>
             <%= @vendor.pmtcountry %><br>
          <% end %>
        </p>
    </div>
  </div>

  <div class="span9">
  </div>
</div>
<%= link_to 'Edit', edit_vendor_path(@vendor) %> |
<%= link_to 'Back', vendors_path %>
