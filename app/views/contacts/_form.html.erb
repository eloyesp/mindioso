<%= form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>

<% if @contact.errors.any? %>
  <div class="alert alert-error">
    <p><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</p>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="span5">
      <div class="control-group">
        <%= f.label 'First name', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :first_name, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Last name', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :last_name, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Vendor', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :vendor_id, :class => 'text_field' %>
          <br />
          <%= link_to t('+ Add New Vendor'), new_vendor_path %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Address', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :address1, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label ' ', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :address2, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'City', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :city, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'State', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :state, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Zip', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :zip, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Country', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :country, :class => 'text_field' %>
        </div>
      </div>
  </div> <!--</span5> -->

  <div class="span5">
      <div class="control-group">
        <%= f.label 'Email', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'Phone', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :phone, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'Website', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :blog, :class => 'text_field', :placeholder => 'http://' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'Facebook', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :facebook, :class => 'text_field', :placeholder => 'http://' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'Twitter', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :twitter, :class => 'text_field', :placeholder => 'http://' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label 'LinkedIn', :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :linkedin, :class => 'text_field', :placeholder => 'http://' %>
        </div>
      </div>
  </div> <!--</span5> -->
</div>  <!--</row> -->

<div class="row">
   <div class="span12">
      <div class="form-actions">
         <%= f.submit nil, :class => 'btn btn-primary' %>
         <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
               contacts_path, :class => 'btn' %>
          <% end %>
      </div>
   </div>
 </div>