<div class="page-header">
  <h1>Invoices</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Vendor</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Date Issued</th>
      <th>Date Due</th>
      <th>Status</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= link_to invoice.id, invoice_path(invoice) %> </td>
        <td><%= link_to (invoice.vendor.name), vendor_path(invoice.vendor) %></td>
        <td><%= invoice.memo %></td>
        <td>Amount</td>
        <td><%= invoice.issued %></td>
        <td><%= invoice.due %></td>
        <td>status</td>
        <td>
          <%= link_to image_tag('icon_edit.png', :border => 0), edit_invoice_path(invoice) %>
          <%= link_to image_tag('icon_delete.png', :border => 0),
              invoice_path(invoice), :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Invoice', new_invoice_path %>
